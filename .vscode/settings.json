{
    "dotnetAcquisitionExtension.enableTelemetry": false,
    "telemetry.feedback.enabled": false,
    // Confer with devcontainer.json's "dotnet restore" notes
    "dotnet.projects.enableAutomaticRestore": false,
    "chat.agent.enabled": false,
    "chat.extensionTools.enabled": false,
    "chat.mcp.enabled": false,
    "chat.promptFiles": false,
    "chat.sendElementsToChat.enabled": false,
    "chat.sendElementsToChat.attachImages": false,
    "chat.sendElementsToChat.attachCSS": false,
    "livePreview.defaultPreviewPath": "ScoutTrainingApp.Browser/bin/Debug/net8.0-browser/publish/wwwroot/index.html",
    "ocaml.sandbox": {
        "kind": "custom",
        //"template": "${firstWorkspaceFolder}/dk -l ERROR --fixed-length-modules false Run -- Ml.Exec --merlin -- $prog $args"
        "template": "${firstWorkspaceFolder}/dk -l ERROR Run Ml.Exec --merlin -- $prog $args"
    },
    "markdown.preview.openMarkdownLinks": "inPreview",
    "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
    "markdown-preview-enhanced.enableScriptExecution": true,
    "git.enabled": false,
    "[xaml]": {
        "editor.defaultFormatter": "dabbinavo.xamlstyler"
    },
    "VsCodeTaskButtons.showCounter": false,
    "VsCodeTaskButtons.tasks": [
        {
            "alignment": "right",
            "label": "$(beaker) Build.Me",
            "task": "Build.Me",
            "tooltip": "Build the Browser application"
        },
        {
            "alignment": "right",
            "label": "$(eye) Show.Me",
            "task": "Show.Me",
            "tooltip": "Show the Browser application"
        }
    ]
}