{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build.Me",
            "detail": "Build the Browser app continuously",
            "type": "process",
            "command": "./dk",
            "windows": {
                "command": ".\\dk.cmd"
            },
            "args": [
                "Build.Me"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Clean.Me",
            "detail": "Clean intermediate and output directories",
            "type": "process",
            "command": "./dk",
            "windows": {
                "command": ".\\dk.cmd"
            },
            "args": [
                "Clean.Me",
            ],
            "group": {
                "kind": "build",
            },
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run.Me",
            "detail": "Build and start the Desktop app",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "ScoutTrainingApp.Desktop"
            ],
            "group": {
                "kind": "test",
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Show.Me",
            "detail": "Run a HTTP server for the Browser app",
            "type": "process",
            "command": "./dk",
            "windows": {
                "command": ".\\dk.cmd"
            },
            "args": [
                "Show.Me",
                "--addr",
                "127.0.0.1",
                "--port",
                "3100",
                "--dir",
                "ScoutTrainingApp.Browser/bin/Debug/net8.0-browser/publish/wwwroot",
            ],
            "group": {
                "kind": "test",
            },
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "python show published wwwroot",
            "detail": "Only for advanced users: A python version of show me",
            "type": "process",
            "command": "python3",
            "windows": {
                "command": "python"
            },
            "args": [
                "-m",
                "http.server",
                "--bind",
                "127.0.0.1",
                "-d",
                "ScoutTrainingApp.Browser/bin/Debug/net8.0-browser/publish/wwwroot",
                "3100"
            ],
            "group": {
                "kind": "test",
            },
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        // ----------------- Lesson Tasks -----------------------
        // To edit:
        //   jj edit -r 'subject(exact:"Lesson tasks")'
        //
        // To reconstruct run the following and remove the outer square brackets:
        //   jj log -r 'descendants(main) & subject(regex:"^[0-9]{4}:")' --no-graph -T '"{\"id\":\"" ++ description.first_line().substr(0,4) ++ "\",\"description\":" ++ description.first_line().substr(5,1000).trim().escape_json() ++ "}\n"' | jq -s 'sort_by(.id) | map({label:("Turn to " + .id + ""), detail:.description, type:"process", command:"jj", args:["new","-r","descendants(main) & subject(regex:\"^" + .id + ":\")"], group:"test",presentation:{reveal:"silent",panel:"shared","showReuseMessage":false}})'  
        {
            "label": "Turn to 2000",
            "detail": "BasicMVVMSample. CommunityToolkit. Name field",
            "type": "process",
            "command": "jj",
            "args": [
                "new",
                "-r",
                "descendants(main) & subject(regex:\"^2000:\")"
            ],
            "group": "test",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "Turn to 2010",
            "detail": "BasicMVVMSample. CommunityToolkit. Greeting field",
            "type": "process",
            "command": "jj",
            "args": [
                "new",
                "-r",
                "descendants(main) & subject(regex:\"^2010:\")"
            ],
            "group": "test",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}