{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build.Me",
            "type": "process",
            "command": "./dk",
            "windows": {
                "command": ".\\dk.cmd"
            },
            "args": [
                "Build.Me"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Run.Me",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "ScoutTrainingApp.Desktop"
            ],
            "group": {
                "kind": "build",
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": false
            }
        }
    ]
}